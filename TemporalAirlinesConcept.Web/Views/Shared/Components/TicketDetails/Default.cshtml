
@model TemporalAirlinesConcept.Web.ViewComponents.TicketDetails.TicketDetailsViewModel

<div class="form-flight-booking rounded-3">
    @if (Model.Ticket is not null)
    {
        <div class="d-flex justify-content-between align-items-center">
            <h4>Ticket details:</h4>
        </div>

        var ticket = Model.Ticket;

        <p>Ticket ID: @ticket.Id</p>

        <p>Purchase ID: @ticket.PurchaseId</p>

        <p>Status: @ticket.PaymentStatus.ToString()</p>

        @if (ticket.Seat != null)
        {
            <p>Seat: @ticket.Seat.Name</p>
        }
        else
        {
            <p>No seat selected</p>
        }
        
        @if (ticket.Passenger != null)
        {
            <p>Seat: @ticket.Passenger</p>
        }
        else
        {
            <p>No passenger assigned</p>
        }
        
        //todo: qr code
    }
</div>